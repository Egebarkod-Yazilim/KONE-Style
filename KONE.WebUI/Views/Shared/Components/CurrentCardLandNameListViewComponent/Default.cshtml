@model List<KONE.Entities.Concrete.CurrentCardLandName>
<div class="card custom-card shadow">
    <div class="card-header justify-content-between">
        <div class="card-title">
            <div class="card-title">
                <span class="bi bi-map-fill"></span>
                Adres Alanları
            </div>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <button id="addlandnametocurrentcard" data-id="0" data-currentcardid="@ViewBag.CurrentCardId" data-landid="@ViewBag.LandNameId" type="button" class="btn btn-primary btn-wave waves-effect waves-light"><span class="bi bi-house-fill"></span> Alan Ekle</button>

        </div>
    </div>
    <div class="card-body collapse show">
        <div class="table-responsive">
            <table id="currentCardAddressdatatable" class="table table-bordered text-nowrap w-100">
                <thead>
                    <tr>
                        <th class="nonsearchable" style="width:10px;">
                            <div class="form-check form-check-md d-flex align-items-center">
                                <input class="form-check-input" type="checkbox" value="" id="checkebox-md">
                            </div>
                        </th>
                        <th>Alan Adı</th>
                        <th>Açıklama</th>
                        <th class="nonsearchable"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {   
                    <tr>
                        <td></td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <div class="hstack gap-2">
                                <button  data-id="@item.Id" data-currentcardid="@item.CurrentCardId" class="updatecurrentcardlandname btn btn-icon btn-wave waves-effect waves-light btn-sm btn-primary-light"><i class="ri-edit-line" data-bs-toggle="tooltip" data-bs-placement="top" title="Alanı Düzenle"></i></button>
                                <a aria-label="anchor" asp-controller="CurrentCard" asp-action="CureendCardLandNameAddressList" asp-route-id="@item.Id" asp-route-currentcardid="@item.CurrentCardId" class="btn btn-icon btn-wave waves-effect waves-light btn-sm btn-success-light" data-bs-toggle="tooltip" data-bs-placement="top" title="Adres Ekle"><i class="ri-map-line"></i></a>
                               
                            </div>
                        </td>
                    </tr>
                }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <script src="~/js/currentcardaddresses.js" defer></script>
