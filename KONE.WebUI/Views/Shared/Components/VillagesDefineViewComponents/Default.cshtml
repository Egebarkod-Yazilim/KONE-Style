<div class="accordion accordion-solid-primary" id="accordionPrimarySolidExample">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingPrimarySolidOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapsePrimarySolidOne" aria-expanded="true"
                    aria-controls="collapsePrimarySolidOne">
                <i class="bi bi-house-fill mr-2"></i>  Yeni köy Oluştur
            </button>
        </h2>
        <div id="collapsePrimarySolidOne" class="accordion-collapse collapse show"
             aria-labelledby="headingPrimarySolidOne"
             data-bs-parent="#accordionPrimarySolidExample">
            <div class="accordion-body">
                <div class="mb-3">
                    <label for="form-text" class="form-label fs-14 text-dark">İl Seçiniz</label>
                    <select class="select2 js-example-placeholder-single js-states form-control select2-hidden-accessible">
                        <option value="st-1" selected="" data-select2-id="select2-data-10-0bpk">İzmir</option>
                        <option value="st-2" data-select2-id="select2-data-87-3oas">İstanbul</option>
                        <option value="st-3" data-select2-id="select2-data-88-zcya">Adana</option>
                        <option value="st-4" data-select2-id="select2-data-89-apx0">Ankara</option>
                        <option value="st-5" data-select2-id="select2-data-90-vybo">Konya</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="form-text" class="form-label fs-14 text-dark">İlçe Seçiniz</label>
                    <select class="select2 js-example-placeholder-single js-states form-control select2-hidden-accessible">
                        <option value="st-1" selected="" data-select2-id="select2-data-10-0bpk">İzmir</option>
                        <option value="st-2" data-select2-id="select2-data-87-3oas">İstanbul</option>
                        <option value="st-3" data-select2-id="select2-data-88-zcya">Adana</option>
                        <option value="st-4" data-select2-id="select2-data-89-apx0">Ankara</option>
                        <option value="st-5" data-select2-id="select2-data-90-vybo">Konya</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="form-password" class="form-label fs-14 text-dark">
                        Köy Adı
                    </label>
                    <input type="text" class="form-control" id="form-text" placeholder="Köy Adı">
                </div>
                <button class="btn btn-success" type="submit"><span class="bi bi-check"></span> Kaydet</button>
            </div>
        </div>
    </div>
</div>
<div class="accordion accordion-solid-primary" id="acrdsolid2">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingPrimarySolidOne2">
            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapsePrimarySolidTwo" aria-expanded="true"
                    aria-controls="acrdsolid2">
                <i class="bi bi-house-fill mr-2"></i>  Köyler
            </button>
        </h2>
        <div id="collapsePrimarySolidTwo" class="accordion-collapse collapse show"
             aria-labelledby="headingPrimarySolidOne2"
             data-bs-parent="#acrdsolid2">
            <div class="accordion-body">
                @await Component.InvokeAsync("ProvinceListViewComponent")
            </div>
        </div>
    </div>
</div>

<script src="~/js/villagesdefine.js" defer></script>

