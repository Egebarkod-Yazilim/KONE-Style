@model List<KONE.Entities.Concrete.CurrentCardAddressMapping>
<div class="card custom-card shadow">
    <div class="card-header justify-content-between">
        <div class="card-title">
            <div class="card-title">
                <span class="bi bi-map-fill"></span>
                Adres Defteri
            </div>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <a asp-controller="CurrentCard" asp-action="AddOrUpdateCurrentCardAddress" asp-route-addressid="0" asp-route-currentcardid="@ViewBag.CurrentCardId" asp-route-landnameid="@ViewBag.LandNameId" type="button" class="btn btn-primary btn-wave waves-effect waves-light"><span class="bi bi-house-fill"></span> Adres Ekle</a>

        </div>
    </div>
    <div class="card-body collapse show">
        <div class="table-responsive">
            <table id="currentCardAddressdatatable" class="table table-bordered text-nowrap w-100">
                <thead>
                    <tr>
                        <th class="nonsearchable" style="width:10px;">
                            <div class="form-check form-check-md d-flex align-items-center">
                                <input class="form-check-input" type="checkbox" value="" id="checkebox-md">
                            </div>
                        </th>
                        <th>Alan Adı</th>
                        <th>Açıklama</th>
                        <th>il</th>
                        <th>ilçe</th>
                        <th>Köy/Mahalle</th>
                        <th class="nonsearchable"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td></td>
                        <td>@item.CurrentCardLandName.Name</td>
                        <td>@item.CurrentCardLandName.Description</td>
                        <td>@item.Address.Province.Name</td>
                        <td>@item.Address.District.Name</td>
                        <td>@item.Address.Village.Name</td>
                        <td>
                            <div class="hstack gap-2">
                                <button data-id="@item.Id" data-currentcardid="@item.CurrentCardId" class="updatecurrentcardlandname btn btn-icon btn-wave waves-effect waves-light btn-sm btn-primary-light"><i class="ri-edit-line" data-bs-toggle="tooltip" data-bs-placement="top" title="Alanı Düzenle"></i></button>
                                <a aria-label="anchor" href="/CurrentCard/CurrentLandList/@item.Id" class="btn btn-icon btn-wave waves-effect waves-light btn-sm btn-success-light" data-bs-toggle="tooltip" data-bs-placement="top" title="Adres Ekle"><i class="ri-map-line"></i></a>
                                <button id="addtomap" type="button" data-id="@item.Id" data-villageid="@item.Address.Village.PropertyId" data-land="@item.Address.BlockIsland" data-parcel="@item.Address.Parcel" class="btn btn-icon btn-wave waves-effect waves-light btn-sm btn-warning-light addtomap">
                                    <i class="ri-radar-fill"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <script src="~/js/currentcardaddresses.js" defer></script>
